<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sockeye Consulting-AnagramAlly</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/38689f9995.js" crossorigin="anonymous"></script>    

        @Styles.Render("~/Content/css")
    </head>
    <body class="m-0" style="height: 100%;  background-color: white" onload="setFocus()">
        <header>
            <div class="container-fluid">
                <nav class="navbar navbar-expand-sm navbar-light bg-light" style="margin-bottom: -10px;">

                    <a class="navbar-brand" href="/Home/Index"><img src="~/Images/AnagramAllyLogo3.png" /></a>
                    <button class="navbar-toggle navbar-toggle-right" type="button" data-toggle="collapse" data-target="#myNavigation" aria-controls="myNavigation" aria-expanded="false" aria-label="Toggle navigation">
                        <span><i class="fa-solid fa-bars"></i></span>
                    </button>

                    <div class="collapse navbar-collapse" id="myNavigation" style="padding-top:18px">
                        <ul class="navbar-nav pull-right" style="list-style: none">
                            <li class="nav-item active " style="padding-left:18px;">
                                <a class="nav-link text-dark" href="/Home/Index">Home</a>
                            </li>
                            <li class="nav-item " style="padding-left: 18px;">
                                <a class="nav-link text-dark" href="/Home/Results?id=list1">Word List 1</a>
                            </li>
                            <li class="nav-item " style="padding-left: 18px;">
                                <a class="nav-link text-dark" href="/Home/Results?id=list2">Word List 2</a>
                            </li>
                            <li class="nav-item" style="padding-left: 18px;">
                                <a class="nav-link text-dark external" href="/Home/About">About</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </header>

        <div class="container">
            @RenderBody()
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)

    </body>
</html>
