<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sockeye Consulting-AnagramAlly</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/f939bccf94.js" crossorigin="anonymous"></script>

    @Styles.Render("~/Content/css")
</head>
<body class="m-0" style="height: 100%;  background-color: white" onload="setFocus()">
    <header>
        <div class="container-fluid">

            <nav class="navbar" style="margin-bottom: -10px;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img style="height:3vh;" src="~/Images/AnagramAllyLogo2.png" /></a>

                <ul class="navbar-nav " id="navbar" style="list-style: none">
                    <li class="nav-item " style="padding:18px;">
                        <a class="nav-link text-dark" href="/Home/Index">Home</a>
                    </li>
                    <li class="nav-item " style="padding:18px;">
                        <a class="nav-link text-dark" href="/Home/Results?id=list1">Word List 1</a>
                    </li>
                    <li class="nav-item " style="padding:18px;">
                        <a class="nav-link text-dark" href="/Home/Results?id=list2">Word List 2</a>
                    </li>
                    <li class="nav-item" style="padding:18px;">
                        <a class="nav-link text-dark external" href="/Home/About">About</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>
