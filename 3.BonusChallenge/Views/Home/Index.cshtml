@model _3.BonusChallenge.ViewModel.AnagramVM
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron jumbotron-fluid full-width" style="margin-bottom: 0px;
    height: 90vh;
    background-image: linear-gradient(rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 1)), url(/Images/Letters1.jpg);
    background-size: cover;
    left: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    max-width: 100vw;
    position: relative;
    right: 50%;
    width: 100vw;">
    <div class="container text-white">
        <h2 class="display-4 pt-5 text-white">Welcome to AnagramAlly!</h2>
        <p class="lead">AnagramAlly is an app for finding anagrams in a list of words</p>
        <p class="lead">Enter your words or phrases below, separated by commas, then click or tap Submit</p>
        <hr class="mt-lg-5" style="border-top: 3px solid white; color: white; background-color: white;">

        <div>
            <form action="/Home/Results" method="post">
                <div class="col text-center">
                    <h3 class="h3">Word List:</h3>
                    <textarea class="form-control" id="wordList" name="wordList" rows="4" onkeyup="toggleButtons()"></textarea>

                </div>
                <div class="row justify-content-center text-center">
                    <div class="col-lg-6" style="margin-top:20px;">
                        <button class="btn btn-light btn-lg bg-info btn-outline-primary" type="button" id="btnClear" disabled onclick="clearForm()">Clear Form</button>
                    </div>

                    <div class="col-lg-6" style="margin-top:20px;">
                        <button class="btn btn-light btn-lg bg-success btn-outline-primary" type="submit" id="btnSubmit" disabled>Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script>

        function setFocus() {
            var textBox = document.getElementById("wordList");

            if (textBox != null) {
                textBox.focus()
            }
        };

        function toggleButtons() {
            var textBox = document.getElementById("wordList");

            document.getElementById("btnSubmit").disabled = (textBox.value.trim().length == 0);
            document.getElementById("btnClear").disabled = (textBox.value.trim().length == 0);
        }

        function clearForm() {
            var textBox = document.getElementById("wordList");

            if (textBox.value.length > 0) {

                if (!confirm('Are you sure you want to remove all the words from Word List?')) {
                    return;
                }
            }
            textBox.value = "";
            toggleButtons();
        }

    </script>
}