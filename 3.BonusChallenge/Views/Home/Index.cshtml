@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron jumbotron-fluid full-width" style="margin-bottom: 0px;
    height: 90vh;
    background-image: linear-gradient(rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 1)), url(/Images/Letters1.jpg);
    background-size: cover;
    left: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    max-width: 100vw;
    position: relative;
    right: 50%;
    width: 100vw;">
    <div class="container text-white">
        <h2 class="display-4 pt-5 text-white">Welcome to AnagramAlly!</h2>
        <p class="lead">AnagramAlly is an app for finding anagrams in a list of words.</p>
        <hr class="mt-lg-5" style="border-top: 3px solid white; color: white; background-color: white;">
        <div>
            <form>
                <div class="col text-center">
                    <h3 class="h3">Word List:</h3>
                    <textarea class="form-control" id="wordList" rows="4" onkeyup="toggleSubmit()"></textarea>

                </div>
                <div class="row justify-content-center text-center" >
                    <div class="col-lg-4" style="margin-top:20px;">
                        <button class="btn btn-light btn-lg bg-info btn-outline-primary" " type="button" onclick="useList1()">Word List 1</button>
                    </div>
                    <div class="col-lg-4" style="margin-top:20px;">
                        <button class="btn btn-light btn-lg bg-info btn-outline-primary" type="button" onclick="useList2()">Word List 2</button>
                    </div>
                    <div class="col-lg-4" style="margin-top:20px;">
                        <button class="btn btn-light btn-lg bg-info btn-outline-primary" type="button" onclick="clearForm()">Clear Form</button>
                    </div>
                </div>

                <div class="col text-center" style="margin-top:20px;">
                    <button class="btn btn-light btn-lg bg-success btn-outline-primary" type="button" id="btnSubmit" disabled>Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script>

        function setFocus() {
            var textBox = document.getElementById("wordList");

            if (textBox != null) {
                textBox.focus()
            }
        };

        function toggleSubmit() {
            var textBox = document.getElementById("wordList");

            document.getElementById("btnSubmit").disabled = (textBox.value.trim().length == 0);
        }

        function clearForm() {
            var textBox = document.getElementById("wordList");

            if (textBox.value.length > 0) {

                if (!confirm('Are you sure you want to remove all the words from Word List?')) {
                    return;
                }
            }
            textBox.value = "";
            toggleSubmit();
        }

        function useList1() {
            var textBox = document.getElementById("wordList");

            if (textBox.value.length > 0) {

                if (!confirm('Are you sure you want to overwrite all the words in the Word List?')) {
                    return;
                }
            }
            textBox.value = "Kyoto, London, Portland, Tokyo, Wichita, Donlon, Anchorage";
            toggleSubmit();
        }

        function useList2() {
            var textBox = document.getElementById("wordList");

            if (textBox.value.length > 0) {

                if (!confirm('Are you sure you want to overwrite all the words in the Word List?')) {
                    return;
                }
            }
            textBox.value = "care, team, Twelve plus One, folk, simple race, truth, race, real, meats, aloud, common, super, math, react, eleven plus two, care impels";
            toggleSubmit();
        }

    </script>
}