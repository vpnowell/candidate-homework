@model _3.BonusChallenge.ViewModel.AnagramVM
@{
    ViewBag.Title = "Results Page";
}

<div class="jumbotron jumbotron-fluid full-width" style="margin-bottom: 0px;
    height: 90vh;
    background-image: linear-gradient(rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 1)), url(/Images/Letters1.jpg);
    background-size: cover;
    left: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    max-width: 100vw;
    position: relative;
    right: 50%;
    width: 100vw;">
    <div class="container text-white">
        <h2 class="display-4 pt-5 text-white">Results</h2>

        <hr class="mt-lg-5" style="border-top: 3px solid white; color: white; background-color: white;">
        <div>
            <div class="col text-center">
                <h3 class="h3">Word List:</h3>
                <p>
                    @if (Model != null && Model.InputList != null)
                    {
                        int firstItem = 0;
                        foreach (var item in Model.InputList)
                        {
                            if (firstItem == 1)
                            {
                                @(", ")
                            }
                            else
                            {
                                firstItem = 1;
                            }
                            @item
                        }
                    }
                </p>

                <h3 class="h3 mt-4">Anagram List:</h3>
                @if (Model != null && Model.OutputList != null)
                {
                    <div class="container text-center text-black bg-white">
                        <div class="text-center col-md mx-auto bg-white">
                            <div class="row">
                                <table class="table rounded bg-dark text-white table-striped">
                                    <tr class="bg-secondary text-center">
                                        <th class="bg-info text-center">Word/Phrase</th>
                                        <th class="bg-info text-center">Anagram(s)</th>
                                    </tr>
                                    @{int outListCount = Model.OutputList.Count;}
                                    @for (int i = 0; i < outListCount; i++)
                                    {
                                        <tr class="table-danger">
                                           <td>@Model.OutputList[i][0]</td>
                                           @if (Model.OutputList[i].Count > 1)
                                           {
                                              <td>
                                               @{int firstItem = 0;}
                                               @for (int j = 1; j < Model.OutputList[i].Count; j++)
                                               {
                                                  if (firstItem == 1)
                                                  {
                                                      @(", ")
                                                  }
                                                  else
                                                  {
                                                      firstItem = 1;
                                                  }
                                                  @Model.OutputList[i][j]
                                               }
                                              </td>
                                            }
                                            else
                                            {
                                               <td>&nbsp;</td>
                                            }
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row justify-content-center text-center">

                <div class="col-lg-12" style="margin-top:20px;">
                    <form action="/Home/Index">
                        <button class="btn btn-light btn-lg bg-success btn-outline-primary" type="submit" id="btnBack">Back</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

